          {
            "label": "build with TESTS and NO_OPENCL",
            "type": "shell",
            "command": "make",
            "args": [
                "NO_OPENCL=1",
                "TESTS=1",
                "--jobs=10",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run pytest",
            "type": "shell",
            "command": "pytest",
            "args": [
                "${workspaceFolder}/python_scripts/test_pi2py2.py"
